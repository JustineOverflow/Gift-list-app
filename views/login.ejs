<%- include('include/head.ejs') %>
<link rel="stylesheet" href="/css/login.css">

</head>

<body>

<%- include('include/nav.ejs') %>

<main>
    <div class="container-login">
        <img class="img-login" alt="background gift" src="/img/background.jpg">

        <div class="overlayTextLogin">
            <h1 class="title">Welcome back,</h1>

            <h2 class="subtitleLogin"><em>Please log-in to access your gift list: </em></h2>
            <form class="login" action="/login" method="POST">
                <div class="form-control">
                    <label for="email">Email </label>
                    <input type="email" name="email" id="email">
                </div>
                <div class="form-control">
                    <label for="password">Password </label>
                    <input type="text" name="password" id="password">
                </div>
                <button type="submit">Login</button>
            </form>
            <div class="reset">
                <div class="reset-space">
                    <a class="reset-text" href="/reset">Forgot password?</a>
                </div>
            </div>
        </div>
    </div>
</main>

<%- include('include/footer.ejs') %>
