<body>

<%- include('../include/nav.ejs') %>

<main>

    <h1>My list</h1>
    <ol>

    <h2>List of my desired gifts: </h2>
    <%
        for (var i = 0; i < gifts.length; i++) {
    %>
            <li> <%= gifts[i].name %> </li>
                <div>
                    <a href="/admin/<%=gifts[i].id%>" class="btn">Detail</a>
                    <form action="/admin/delete" method="POST">
                        <input type="hidden" value="<%=gifts[i].id%>" name="giftId">
                        <button class="btn" type="submit">Delete</button>
                    </form>
                    <a href="/admin/edit/<%= gifts[i].id %>" class="btn">Edit</a>
                </div>
        <p></p>
    <%
        }
    %>
    </ol>
</main>

